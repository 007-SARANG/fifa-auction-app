// Firestore Security Rules for FIFA Auction App
// Copy these rules to your Firebase Console > Firestore Database > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow all operations for authenticated users
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Auctions collection - everyone can read, authenticated users can write
    match /auctions/{auctionId} {
      allow read: if true;
      allow write: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Activity logs collection - everyone can read, authenticated users can write
    match /activityLogs/{logId} {
      allow read: if true;
      allow write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Players collection - everyone can read, authenticated users can update isSold field
    match /players/{playerId} {
      allow read: if true;
      allow update: if request.auth != null 
        && request.writeFields.hasOnly(['isSold'])
        && request.resource.data.isSold is bool;
    }
  }
}