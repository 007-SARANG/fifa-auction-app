// Firestore Security Rules for FIFA Auction App
// Copy these rules to your Firebase Console > Firestore Database > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
      
      // Allow access to user subcollections (like roomStates)
      match /{document=**} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Auctions collection
    match /auctions/{auctionId} {
      allow read: if true;
      allow write: if request.auth != null;
      
      // Allow access to auction subcollections (like messages)
      match /{document=**} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Activity logs collection
    match /activityLogs/{logId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Players collection
    match /players/{playerId} {
      allow read: if true;
      allow update: if request.auth != null 
        && request.writeFields.hasOnly(['isSold'])
        && request.resource.data.isSold is bool;
    }
  }
}